@page "/Configuracion"
@attribute [StreamRendering]

<PageTitle>Configuracion</PageTitle>
<style>
            .config-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 450px; /* Aumentado */
        padding: 30px; /* Aumentado */
        text-align: center;
        justify-content: center;
    }

            .back-button {
                text-decoration: none;
                color: #444;
                font-size: 14px;
                display: block;
                text-align: left;
                margin-bottom: 15px;
                font-weight: bold;
            }

            .config-title {
                font-size: 22px;
                font-weight: bold;
                margin-bottom: 20px;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .config-title .icon {
                margin-left: 8px;
            }

            .config-options {
                margin: 20px 0;
            }

            .config-btn {
                background: #f5f5f5;
                border: none;
                border-radius: 12px;
                padding: 12px 18px;
                margin: 10px 0;
                width: 100%;
                font-size: 16px;
                font-weight: bold;
                cursor: pointer;
                display: flex;
                justify-content: space-between;
                align-items: center;
                transition: background 0.3s, transform 0.2s;
            }

            .config-btn:hover {
                background: #e0e0e0;
                transform: scale(1.02);
            }

            .toggle-container {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .toggle-switch {
                position: relative;
                width: 40px;
                height: 22px;
            }

            .toggle-switch input {
                display: none;
            }

            .toggle-slider {
                position: absolute;
                width: 100%;
                height: 100%;
                background: #ccc;
                border-radius: 12px;
                cursor: pointer;
                transition: 0.3s;
            }

            .toggle-slider::before {
                content: "";
                position: absolute;
                width: 18px;
                height: 18px;
                background: white;
                border-radius: 50%;
                top: 2px;
                left: 2px;
                transition: 0.3s;
            }

            input:checked + .toggle-slider {
                background: #4CAF50;
            }

            input:checked + .toggle-slider::before {
                transform: translateX(18px);
            }

            .logout-btn {
                background: #ff4f4f;
                color: white;
                border: none;
                border-radius: 12px;
                padding: 12px 15px;
                width: 100%;
                font-size: 16px;
                font-weight: bold;
                cursor: pointer;
                margin-top: 20px;
                transition: background 0.3s, transform 0.2s;
            }

            .logout-btn:hover {
                background: #d43f3f;
                transform: scale(1.02);
            }

            .icon {
                margin-right: 10px;
                font-size: 18px;
            }
</style>

<div class="config-container">
    <a href="#" class="back-button">← Regresar</a>
    <h1 class="config-title">Configuración <span class="icon">⚙️</span></h1>

    <div class="config-options">
        <button class="config-btn">
            <span class="icon">✏️</span> Editar un hábito
        </button>

        <div class="config-btn toggle-container">
            <span class="icon">🔔</span> Manejo de Notificaciones
            <label class="toggle-switch">
                <input type="checkbox">
                <span class="toggle-slider"></span>
            </label>
        </div>

        <button class="config-btn">
            <span class="icon">🗑️</span> Borrar un hábito
        </button>

        <button class="config-btn">
            <span class="icon">🛡️</span> Términos y condiciones
        </button>
    </div>

    <button class="logout-btn">
        <span class="icon">⏻</span> Cerrar Sesión
    </button>
</div>
